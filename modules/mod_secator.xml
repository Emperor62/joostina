<?xml version="1.0" ?>
<mosinstall type="module" version="1.0.0">
	<name>Разделы - категории</name>
	<author>Joostina! Project</author>
	<creationDate>07:05:2006</creationDate>
	<copyright>(C) 2008-2009 Joostina team.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.htm GNU/GPL</license>
	<authorEmail>joostinacms@gmail.com</authorEmail>
	<authorUrl>www.joostina.ru</authorUrl>
	<version>0.1.0</version>
	<description>Модуль разделов и категорий позволяет показывать список разделов и категорий сайта.</description>
	<files>
		<filename module="mod_secator">mod_secator.php</filename>
	</files>

	<params>
		<param type="tabs" default="startPane" name="one" />
		<param type="tabs" default="startTab" name="0" label="Базовые"/>
		
		<param name="moduleclass_sfx" type="text" default="" label="Суффикс класса модуля" description="Суффикс, который будет использован в описании класса (table.moduletable) таблицы стилей (CSS) модуля. Это позволяет использовать индивидуальный стиль модуля." />
		<param type="cache_list" name="cache_time" label="Кэшировать" description="Выберите время на которое необходимо кэшировать данный модуль. По умолчанию используется время, указанное в глобальной конфигураци." />
		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param name="use_to" type="radio" default="0" label="Использовать для" description="Выберите, для какого типа данных использовать модуль">
			<option value="0">Разделов</option>
			<option value="1">Категорий</option>
		</param>

		<param name="Itemid" type="text" default="" label="Itemid" description="Itemid ссылок, по умолчанию система будет определять его сама" />

		<param name="target" type="radio" default="0" label="Открывать в новом окне" description="Позволяет открывать ссылки модуля в новом окне">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>

		<param name="order_asc_desc" type="list" default="ASC" label="Порядок" description="Позволяет указать порядок сортировки элементов">
			<option value="ASC">По убыванию</option>
			<option value="DESC">По возрастанию</option>
		</param>

		<param name="show_published" type="list" default="1" label="Публикация" description="Позволяет выбрать тип убликации элементов для отображения">
			<option value="1">Только опубликованные</option>
			<option value="0">Только НЕопубликованные</option>
			<option value="2">И опубликованные и не опубликованные</option>
		</param>

		<param name="count" type="text" default="5" label="Число объектов" description="Количество отображаемых объектов (по умолчанию 5)" />

		<param name="sel_section" type="mos_section" default="0" label="Выберите раздел" description="Выберите раздел для отображения" />
		<param name="sel_category" type="mos_category" default="0" label="Выберите категорию" description="Выберите категорию для отображения" />

		<param type="tabs" default="endTab" />
		<param type="tabs" default="startTab" name="1" label="Разделы"/>

			<param name="view_section" type="filelist" directory="/modules/mod_secator/section/" filter="section_*" hide_none="1" hide_default="1" default="section_defaults.php" label="Шаблон раздела" description="Выберите шаблон для отображения списка разделов" />

			<param name="task_section" type="list" default="blogsection" label="Тип ссылки" description="Позволяет указать вид для вывода соержимого при переходе по ссылке">
				<option value="blogsection">Блог - Содержимое раздела</option>
				<option value="section">Таблица - Содержимое раздела</option>
			</param>

			<param name="order_section" type="list" default="ordering" label="Сортировка" description="Позволяет указать порядок сортировки элементов">
				<option value="ordering">По порядку</option>
				<option value="id">По идентификаторам</option>
				<option value="title">По заголовку</option>
				<option value="name">По названию</option>
				<option value="description">По описанию</option>
				<option value="published">По статусу публикации</option>
				<option value="RAND()">В случайном порядке</option>
				<option value="scope">По области scope</option>
			</param>


		<param type="tabs" default="endTab" />
		<param type="tabs" default="startTab" name="1" label="Категории"/>

			<param name="view_category" type="filelist" directory="/modules/mod_secator/category/" filter="category_*" hide_none="1" hide_default="1" default="category_defaults.php" label="Шаблон категории" description="Выберите шаблон для отображения списка категорий" />

			<param name="task_category" type="list" default="blogcategory" label="Тип ссылки" description="Позволяет указать вид для вывода соержимого при переходе по ссылке">
				<option value="blogcategory">Блог - Содержимое категории</option>
				<option value="category">Таблица - Содержимое категории</option>
			</param>

			<param name="order_category" type="list" default="ordering" label="Сортировка" description="Позволяет указать порядок сортировки элементов">
				<option value="ordering">По порядку</option>
				<option value="section">По разделам</option>
				<option value="id">По идентификаторам</option>
				<option value="title">По заголовку</option>
				<option value="name">По названию</option>
				<option value="description">По описанию</option>
				<option value="count">По числу элементов</option>
				<option value="published">По статусу публикации</option>
				<option value="RAND()">В случайном порядке</option>
			</param>

		<param type="tabs" default="endTab" />
		<param type="tabs" default="endPane" />
	</params>
</mosinstall>
